<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>


                    @if (string.Equals(Session["UserType"]?.ToString(), "3", StringComparison.OrdinalIgnoreCase))
                    {
                        <li>@Html.ActionLink("Appartments", "Index", "Apartments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Message", "Index", "Messages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appointment", "Index", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Logout", "Logout", "Accounts", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (string.Equals(Session["UserType"]?.ToString(), "2", StringComparison.OrdinalIgnoreCase))
                    {
                        <li>@Html.ActionLink("Building", "Index", "Buildings", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appartments", "Index", "Apartments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Status", "Index", "Status", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appointment", "Index", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Message", "Index", "Messages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Report", "Index", "Reports", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Logout", "Logout", "Accounts", new { area = "" }, new { @class = "nav-link" })</li>

                    }
                    @if (string.Equals(Session["UserType"]?.ToString(), "1", StringComparison.OrdinalIgnoreCase))
                    {
                        <li>@Html.ActionLink("Property Owner", "Index", "PropertyOwners", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Property Manager", "Index", "PropertyManagers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Tenant", "Index", "Tenants", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("User", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("User Type", "Index", "UserTypes", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Building", "Index", "Buildings", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appartments", "Index", "Apartments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Status", "Index", "Status", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appointment", "Index", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Message", "Index", "Messages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Report", "Index", "Reports", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Logout", "Logout", "Accounts", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <p>UserType: @Session["UserType"]</p>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
